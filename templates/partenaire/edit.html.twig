{% extends 'base.html.twig' %}

{% block title %}Modifier un Partenaire{% endblock %}

{% block body %}
    <body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper" style="width: 100%;">

    {% include 'SideBar.html.twig' %}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {% include 'TopBar.html.twig' %}

            <!-- Begin Page Content -->
            <div class="container-fluid">

<div class="container py-4">
    <h1 class="mb-4 text-primary">
        <i class="fas fa-user-edit me-2"></i> Modifier le partenaire
    </h1>

    <div class="card shadow-sm p-4 border-0">
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.numerotel, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.numerotel, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.numerotel) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description_contrat, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description_contrat, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description_contrat) }}
        </div>

        <button class="btn btn-success rounded-pill px-4" type="submit">
            <i class="fas fa-save me-2"></i>Mettre à jour
        </button>

        {{ form_end(form) }}
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_partenaire_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>

        {{ include('partenaire/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
