{% extends 'base.html.twig' %}

{% block title %}Détails du Partenaire{% endblock %}

{% block body %}
    <body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper" style="width: 100%;">

    {% include 'SideBar.html.twig' %}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {% include 'TopBar.html.twig' %}

            <!-- Begin Page Content -->
            <div class="container-fluid">

<div class="container mt-4">
    <a href="{{ path('app_partenaire_index') }}" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    <h1 class="mb-4"><i class="fas fa-user-tie me-2"></i>Détails du Partenaire</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th><i class="fas fa-envelope me-1"></i>Email</th>
                        <td>{{ partenaire.email }}</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-user me-1"></i>Nom</th>
                        <td>{{ partenaire.nom }}</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-phone me-1"></i>Téléphone</th>
                        <td>{{ partenaire.numerotel }}</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-tag me-1"></i>Type</th>
                        <td>{{ partenaire.type }}</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-file-alt me-1"></i>Description du contrat</th>
                        <td>{{ partenaire.descriptionContrat }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        
        <div class="d-flex justify-content-start gap-2 mt-3">
            <a href="{{ path('app_partenaire_edit', {'id': partenaire.id}) }}" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
                <i class="fas fa-edit me-1"></i> Modifier
            </a>
            {{ include('partenaire/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
