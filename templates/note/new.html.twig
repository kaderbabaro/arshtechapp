{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle note{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Créer une nouvelle note</h1>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.Message, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Message, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre message'}}) }}
                        {{ form_errors(form.Message) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.CreatedAt, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.CreatedAt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.CreatedAt) }}
                    </div>

                    <button class="btn btn-primary">Enregistrer</button>

                {{ form_end(form) }}
            </div>
        </div>

        <a href="{{ path('app_note_index') }}" class="btn btn-outline-secondary mt-3">
            ← Retour à la liste
        </a>
    </div>
{% endblock %}
