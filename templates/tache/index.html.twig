{% extends 'base.html.twig' %}

{% block title %}Tâches{% endblock %}

{% block body %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper" style="width: 100%;">

    {% include 'SideBar.html.twig' %}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {% include 'TopBar.html.twig' %}

            <!-- Begin Page Content -->
            <div class="container-fluid">

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="fas fa-tasks me-2"></i>Tâches
    </h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Titre</th>
                <th>Chargé de tache</th>
                <th>Description</th>
                <th>Statut</th>
                <th>Priorité</th>
                <th>Échéance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.titre }}</td>
                <td>{{ tache.Utilisateur }}</td>
                <td>{{ tache.description }}</td>

                {# Statut coloré #}
                <td>
                    {% set statutClass = {
                        'Executée': 'text-success fw-bold',
                        'En-cours': 'text-warning fw-bold',
                        'Non-executée': 'text-danger fw-bold'
                    }[tache.statut] ?? '' %}
                    <span class="{{ statutClass }}">{{ tache.statut|capitalize }}</span>
                </td>

                {# Priorité colorée #}
                <td>
                    {% set prioriteClass = {
                        'Élevée': 'text-danger fw-bold',
                        'Moyenne': 'text-warning fw-bold',
                        'Basse': 'text-success fw-bold'
                    }[tache.priorite] ?? '' %}
                    <span class="{{ prioriteClass }}">{{ tache.priorite|capitalize }}</span>
                </td>

                <td>{{ tache.dateEcheance ? tache.dateEcheance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_tache_show', {'id': tache.id}) }}" class="btn btn-sm btn-outline-primary me-2" title="Voir">
                        <i class="fas fa-eye"></i>
                    </a>
                                            {% if app.user and app.user.username in ['saidouabdkad1@gmail.com', 'rsitahassimi@gmail.com', 'abdoulhafizsouleymane2@gmail.com'] %}

                    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                                            {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center text-muted">Aucune tâche trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if app.user and app.user.username in ['saidouabdkad1@gmail.com', 'rsitahassimi@gmail.com', 'abdoulhafizsouleymane2@gmail.com'] %}
    <a href="{{ path('app_tache_new') }}" class="btn btn-success rounded-pill px-4 py-2 shadow-sm">
        <i class="fas fa-plus me-2"></i>Créer une nouvelle tâche
    </a>
{% endif %}
</div>

{% endblock %}
