<form method="post" action="{{ path('app_objectifs_delete', {'id': objectif.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ objectif.id) }}">
    <button class="btn btn-danger rounded-pill px-4 py-2 shadow-sm" style="margin-left: 10%;">Delete</button>
</form>
