{% extends 'base.html.twig' %}

{% block title %} Nouvel Objectif {% endblock %}

{% block body %}
        <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper" style="width: 100%;">

        {% include 'SideBar.html.twig' %}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {% include 'TopBar.html.twig' %}

                <!-- Begin Page Content -->
                <div class="container-fluid">


{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-bullseye"></i> Formulaire Objectif
            </h5>
        </div>
        <div class="card-body">
            
            <div class="mb-3">
                <label for="titre" class="form-label">
                    <i class="fas fa-heading"></i> Titre
                </label>
                {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre de l\'objectif'}}) }}
                {{ form_errors(form.titre) }}
            </div>

            <div class="mb-3">
                <label for="montant" class="form-label">
                    <i class="fas fa-money-bill-wave"></i> Montant
                </label>
                {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le montant en FrCFA'}}) }}
                {{ form_errors(form.montant) }}
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">
                    <i class="fas fa-align-left"></i> Description
                </label>
                {{ form_widget(form.Description, {'attr': {'class': 'form-control', 'placeholder': 'De quoi s\'agit il?'}}) }}
                {{ form_errors(form.Description) }}
            </div>

            <div class="mb-3">
                <label for="createdAT" class="form-label">
                    <i class="fas fa-clock"></i> Créé le
                </label>
                {{ form_widget(form.createdAT, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.createdAT) }}
            </div>

            
            <div class="mb-3">
                <label for="date" class="form-label">
                    <i class="fas fa-calendar-alt"></i> Date limtie de réalisation
                </label>
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
        </div>
        <div class="card-footer bg-light text-end">
            <button class="btn btn-success">
                <i class="fas fa-save"></i> Enregistrer
            </button>
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}