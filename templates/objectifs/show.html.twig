{% extends 'base.html.twig' %}

{% block title %}Détail de l'objectif{% endblock %}

{% block body %}
            <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper" style="width: 100%;">

        {% include 'SideBar.html.twig' %}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {% include 'TopBar.html.twig' %}

                <!-- Begin Page Content -->
                    <div class="container-fluid">
  <div class="row">
                <a href="{{ path('app_objectifs_index') }}" class="btn btn-outline-secondary rounded-pill shadow-sm">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            
     </div>
    <div class="container mt-4">
        <h1 class="mb-4"><i class="fas fa-bullseye text-primary"></i> Détail de l'objectif</h1>

        <table class="table table-bordered shadow-sm">
            <tbody>
                 <tr>
                    <th><i class="fas fa-heading"></i> Titre</th>
                    <td>{{ objectif.titre }}</td>
                </tr>
                <tr>
                    <th><i class="fas fa-euro-sign"></i> Montant</th>
                    <td>{{ objectif.montant }}</td>
                </tr>
                <tr>
                    <th><i class="fas fa-hashtag"></i> ID</th>
                    <td>{{ objectif.id }}</td>
                </tr>
                <tr>
                    <th><i class="fas fa-align-left"></i> Description</th>
                    <td>{{ objectif.Description }}</td>
                </tr>
                <tr>
                    <th><i class="fas fa-calendar-alt"></i> Date cible</th>
                    <td>{{ objectif.date ? objectif.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th><i class="fas fa-clock"></i> Créé le</th>
                    <td>{{ objectif.createdAT ? objectif.createdAT|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex gap-2">
                   {% if app.user and app.user.username in ['saidouabdkad1@gmail.com', 'rsitahassimi@gmail.com', 'abdoulhafizsouleymane2@gmail.com'] %}
                <a href="{{ path('app_objectifs_edit', {'id': objectif.id}) }}" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm me-2">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                   
         {{ include('objectifs/_delete_form.html.twig') }}
         {% endif %}
        </div>
    </div>
{% endblock %}
