{% extends 'base.html.twig' %}

{% block title %}Nouvelle Transaction{% endblock %}
    {% block stylesheets %}
   
    {% endblock %}

{% block body %}

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper" style="width: 100%;">

        {% include 'SideBar.html.twig' %}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {% include 'TopBar.html.twig' %}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0 text-gray-800">
                            <i class="fas fa-plus me-2"></i>Nouvelle Transaction
                        </h1>
                        <a href="{{ path('app_transaction_index') }}" class="btn btn-outline-secondary rounded-pill px-4 py-2 shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i>Retour Ã  la liste
                        </a>
                    </div>

                    <!-- Form Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                           {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.type) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.montant) }}
                            {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Montant en FCFA'}}) }}
                            {{ form_errors(form.montant) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.categorie) }}
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.categorie) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.date) }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="text-center">
                            <button class="btn btn-success px-4"><i class="fas fa-check me-2"></i>Enregistrer</button>
                            <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary ms-2">Annuler</a>
                        </div>
                    {{ form_end(form) }}
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

</body>
{% endblock %}
