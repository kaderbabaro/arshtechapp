{% extends 'base.html.twig' %}

{% block title %}Détail de la Transaction{% endblock %}

{% block body %}
    <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper" style="width: 100%;">

        {% include 'SideBar.html.twig' %}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {% include 'TopBar.html.twig' %}

                <!-- Begin Page Content -->
                <div class="container-fluid">

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="fas fa-money-check-alt me-2"></i>Détail de la Transaction
        </h1>
        <a href="{{ path('app_transaction_index') }}" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    {# <tr>
                        <th><i class="fas fa-hashtag me-2"></i>ID</th>
                        <td>{{ transaction.id }}</td>
                    </tr> #}
                    <tr>
                        <th><i class="fas fa-exchange-alt me-2"></i>Type</th>
                        <td>{{ transaction.type }}</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-coins me-2"></i>Montant</th>
                        <td>{{ transaction.montant }} FCFA</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-list-alt me-2"></i>Catégorie</th>
                        <td>{{ transaction.categorie }}</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-calendar-alt me-2"></i>Date</th>
                        <td>{{ transaction.date ? transaction.date|date('d/m/Y') : 'Non précisée' }}</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-align-left me-2"></i>Description</th>
                        <td>{{ transaction.description ?: 'Aucune description' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                                        {% if app.user and app.user.username in ['saidouabdkad1@gmail.com', 'rsitahassimi@gmail.com', 'abdoulhafizsouleymane2@gmail.com'] %}

                <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm me-2">
                    <i class="fas fa-edit me-1"></i>Modifier
                </a>
                {{ include('transaction/_delete_form.html.twig', { 'button_label': 'Supprimer' }) }}
                                        {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
