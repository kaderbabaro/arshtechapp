{% extends 'base.html.twig' %}

{% block title %}Modifier la Transaction{% endblock %}

{% block body %}
    <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper" style="width: 100%;">

        {% include 'SideBar.html.twig' %}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                {% include 'TopBar.html.twig' %}

                <!-- Begin Page Content -->
                <div class="container-fluid">

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="fas fa-edit me-2"></i>Modifier la Transaction
        </h1>
        <a href="{{ path('app_transaction_index') }}" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
           {{ form_start(form) }}

<div class="mb-3">
    {{ form_label(form.type, 'Type de Transaction', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.type) }}
</div>

<div class="mb-3">
    {{ form_label(form.montant, 'Montant (en FCFA)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le montant en FCFA'}}) }}
    {{ form_errors(form.montant) }}
</div>

<div class="mb-3">
    {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.categorie) }}
</div>

<div class="mb-3">
    {{ form_label(form.date, 'Date de la transaction', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.date) }}
</div>

<div class="mb-3">
    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Ajoutez une description (facultatif)'}}) }}
    {{ form_errors(form.description) }}
</div>

<div class="text-center">
    <button type="submit" class="btn btn-success px-5">
        <i class="fas fa-check me-2"></i>{{ button_label|default('Enregistrer') }}
    </button>
    <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary ms-3">Annuler</a>
</div>

{{ form_end(form) }}

        </div>
    </div>

    <div class="mt-3">
        {{ include('transaction/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}
