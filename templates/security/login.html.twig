{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg,rgb(213, 249, 35),rgb(182, 36, 36));
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .login-container {
        background-color: white;
        padding: 2rem;
        color: white;
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }
    .login-avatar {
        width: 100px;
        height: 100px;
        margin: 0 auto 1rem;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #FF5733;
    }
</style>

<div class="login-container" style="background-color: red;width: 400px;height: auto;">
    <img src="{{ asset('images/logo.png') }}" alt="Avatar" class="login-avatar">

    <h2 class="mb-4">üîê Connexion</h2>

    {% if error %}
        <div class="alert alert-danger text-center">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% if app.user %}
        <div class="alert alert-info text-center mb-4">
            Connect√© en tant que {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}">D√©connexion</a>
        </div>
    {% endif %}

    <form method="post">
        <div class="form-group mb-3 text-start">
            <label for="inputUsername">Nom d'utilisateur</label>
            <input type="text" name="username" value="{{ last_username }}" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
        </div>

        <div class="form-group mb-3 text-start">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-check mb-3 text-start">
            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me">
            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
        </div>

        <button class="btn btn-primary w-100" type="submit">Connexion</button>
    </form>
</div>
{% endblock %}
