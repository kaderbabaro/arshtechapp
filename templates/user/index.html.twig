{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
        <body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper" style="width: 100%;">

    {% include 'SideBar.html.twig' %}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            {% include 'TopBar.html.twig' %}

            <!-- Begin Page Content -->
            <div class="container-fluid">

<div class="container my-5">
    <h1 class="mb-4">Liste des utilisateurs</h1>
{% if app.user and app.user.username in ['saidouabdkad1@gmail.com', 'rsitahassimi@gmail.com', 'abdoulhafizsouleymane2@gmail.com'] %}
    <a href="{{ path('app_register') }}" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Créer un nouvel utilisateur
    </a>
{% endif %}
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom d'utilisateur</th>
                    <th>Rôles</th>
                    <th>Vérifié</th>
                    {# <th>Photo</th> #}
                  
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        {% for role in user.roles %}
                            <span class="badge bg-primary">{{ role|replace({'ROLE_': ''}) }}</span>
                        {% else %}
                            <em>Aucun rôle</em>
                        {% endfor %}
                    </td>
                    <td>
                        {% if user.isVerified %}
                            <span class="badge bg-success">Oui</span>
                        {% else %}
                            <span class="badge bg-danger">Non</span>
                        {% endif %}
                    </td>
                    {# <td>
                        {% if user.photo %}
                            <img src="{{ asset('uploads/photos/' ~ user.photo) }}" alt="Photo de {{ user.username }}" style="max-height: 50px; border-radius: 5px;">
                        {% else %}
                            <em>Pas de photo</em>
                        {% endif %}
                    </td> #}
                   
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info" title="Voir">
                            <i class="bi bi-eye"></i>
                        </a>
                        {% if app.user and app.user.username in ['saidouabdkad1@gmail.com', 'rsitahassimi@gmail.com', 'abdoulhafizsouleymane2@gmail.com'] %}
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center fst-italic">Aucun utilisateur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
